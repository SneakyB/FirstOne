@model PaginList.PaginatedList<FirstOne.Models.Client>


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Klient: <input type="text" name="Search" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Szukaj" /> |
            <a asp-action="Index">Wróć do pełnej listy</a>
        </p>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["NameSortParm"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">Imię</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["SurnameSortParm"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">Nazwisko</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["CitySortParm"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">Miasto</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["ProgSortParm"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">Program</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
@*<ul class="pagination">
    <li><a asp-area="" asp-controller="Home" asp-action="Index">test</a></li>
</ul>*@
    <a asp-action="Index"
       asp-route-sort="@ViewData["CurrentSort"]"
       asp-route-page="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-sort="@ViewData["CurrentSort"]"
       asp-route-page="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Next
    </a>