@model IEnumerable<FirstOne.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Klient: <input type="text" name="Search" value="@ViewData["NowSearching"]"  />
            <input type="submit" value="Szukaj"  /> |
            <a asp-action="Index">Wróć do pełnej listy</a>
        </p>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["NameSortParm"]">
                    @Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["SurnameSortParm"]">
                    @Html.DisplayNameFor(model => model.Surname)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="@ViewData["CitySortParm"]">
                    @Html.DisplayNameFor(model => model.City)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
